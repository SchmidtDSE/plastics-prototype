# Determine target in percent
var goalPercentIncrease = in.chinaIncinerationTarget / 100;
var percentIncrease = 0;
change percentIncrease by goalPercentIncrease over 2020 to 2025;

# Determine target in MT
var totalWaste = (
  out.china.eolLandfillMT +
  out.china.eolIncinerationMT +
  out.china.eolMismanagedMT +
  out.china.eolRecyclingMT
);
var currentPercent = out.china.eolIncinerationMT / totalWaste;
var minIncineration = totalWaste * (percentIncrease + currentPercent);

# Determine change required
var originalIncineration = out.china.eolIncinerationMT;
var requiredIncrease = minIncineration - originalIncineration;
limit requiredIncrease to [0,];

# Apply change to landfill
out.china.eolIncinerationMT = out.china.eolIncinerationMT + requiredIncrease;

# Offset in other fates
distribute -1 * requiredIncrease across [
  out.china.eolMismanagedMT,
  out.china.eolLandfillMT
] proportionally;
